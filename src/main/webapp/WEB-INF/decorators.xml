<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/layouts/">
	<!-- 不装饰 -->
	<excludes>
		<pattern>/static/*</pattern>
		<pattern>/api/*</pattern>
		<!-- 为了学习bootstrap，所以暂时不装饰bootstrap下的文件 -->
		<pattern>/bootstrap/*</pattern>
		<!-- <pattern>/WEB-INFO/views/bootstrap/*</pattern>
			不要写成这样的路径 
		-->
	</excludes>

	<!-- 需要sitemesh装饰的文件 -->
	<decorator name="default" page="default.jsp">
		<pattern>/*</pattern>
	</decorator>
</decorators>
